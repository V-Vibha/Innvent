<mvc:View controllerName="com.sap.bpm.pv.innvent.ui.controller.MyView" 
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:viz="sap.viz.ui5.controls" 
    xmlns:layout="sap.ui.layout" displayBlock="true"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
    xmlns:viz.data="sap.viz.ui5.data" height="100%">

    <Page id="page" title="{i18n>title}">
             
<layout:FixFlex id='chartFixFlex' minFlexSize="250">
        <!--Below is the setting panel -->
        <layout:fixContent>
            <Panel id='settingsPanel' class="panelStyle" expandable="true" expanded="false" headerText="Settings" width="auto">
                <content>
                    <HBox class='settingsHBox'>
                    <VBox class='settingsBox'>
                        <Label text = '{/dataLabel/name}' design="Bold" class='settingsLabel sapUiTinyMargin'></Label>
                        <Switch  class='settingsSwitch' state="{/dataLabel/defaultState}" change='onDataLabelChanged'>
                            <layoutData>
                                <FlexItemData id="_IDGenFlexItemData1" growFactor="1" />
                            </layoutData>
                        </Switch>
                    </VBox>
                    <VBox id="_IDGenVBox3" class='settingsBox'>
                        <Label id="_IDGenLabel3" text = '{/semanticColor/name}' design="Bold" class='settingsLabel sapUiTinyMargin'></Label>
                        <Switch id='semanticColorSwitch' class='settingsSwitch' state="{/semanticColor/defaultState}" change='onSemanticColorChanged'>
                            <layoutData>
                                <FlexItemData id="_IDGenFlexItemData2" growFactor="1" />
                            </layoutData>
                        </Switch>
                    </VBox>
                    </HBox>
                </content>
                <viz:Popover id="idPopOver"></viz:Popover>
            </Panel>
         </layout:fixContent>
       <layout:flexContent>
       <HBox id="hii" height="100%" width="100%">
            <List id ="attributeList" items="{/}" height="100%" width="250px">
                <items>
                    <CustomListItem>
                        <RadioButton text="{value}" select="handleSelectChange"/>
                    </CustomListItem>
                </items>
                
                <infoToolbar >
                    <OverflowToolbar id="_IDGenOverflowToolbar1" width="250px" height="50px">
                        <Title level="H1" class="sapUiSmallMargin" text=" Attributes" />
                    </OverflowToolbar>
                </infoToolbar>
            </List>
            <viz:VizFrame vizType="treemap" id="myTreeMap" width="1010px" height="100%">
                <viz:feeds id="vizfeed">
                    <viz.feeds:FeedItem uid="color" type="Measure"
                        values="SC_Number_Of_Instances" />
                    <viz.feeds:FeedItem uid="weight" type="Measure"
                        values="SC_Number_Of_Instances" />                     
                    <viz.feeds:FeedItem uid="title" type="Dimension"
                        values="SC_Status" />    
                    <viz.feeds:FeedItem uid="title" type="Dimension"
                    values="Selected_Attribute" />
                </viz:feeds>
            </viz:VizFrame>
          </HBox>  
        </layout:flexContent>
    </layout:FixFlex>
    </Page>
</mvc:View>